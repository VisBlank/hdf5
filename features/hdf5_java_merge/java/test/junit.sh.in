#!/bin/sh

# Set up default variable values if not supplied by the user.

# where the new builds exist
HDFBLD_HOME=$(top_srcdir)/java
export HDFBLD_HOME

# where Java is installed (requires jdk1.7.x)
JAVAPATH=@JAVABIN@
export JAVAPATH

###############################################################################
#            DO NOT MODIFY BELOW THIS LINE
###############################################################################


CPATH=".:"$HDFBLD_HOME"/lib/jhdf5.jar:"$HDFBLD_HOME"/lib/junit.jar:"$HDFBLD_HOME"/lib/hamcrest-core.jar:"$HDFBLD_HOME"/lib/slf4j-api-1.7.5.jar:"$HDFBLD_HOME"/lib/ext/slf4j-nop-1.7.5.jar"

TEST=/usr/bin/test
if [ ! -x /usr/bin/test ]
then
TEST=`which test`
fi

if $TEST -z "$CLASSPATH"; then
        CLASSPATH=""
fi
CLASSPATH=$CPATH":"$CLASSPATH
export CLASSPATH

if $TEST -n "$JAVAPATH" ; then
        PATH=$JAVAPATH":"$PATH
        export PATH
fi


($JAVAPATH/java -Xmx1024M -Djava.library.path=$HDFBLD_HOME"/lib" -ea org.junit.runner.JUnitCore test.TestAll)
